<body>



    <section class="banner" id="top">

        <div class="container">

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div src="~/images/banner.jpg">
                        <div class="banner-caption">

                            <div class="line-dec"></div>
                            <h2>Best Finder For You</h2>
                            <span>Discover your dream society with just a few clicks</span>

                            <div class="blue-button">
                                <a class="scrollTo" data-scrollTo="popular" href="#">Find More</a>
                            </div>
                        </div>
                    </div>
                    <div class="submit-form">
                        <form id="form-submit" action="" method="get">
                            <div class="row">
                                <div class="col-md-3 first-item">
                                    <fieldset>
                                        <input name="id" type="text" class="form-control" id="id" placeholder="ID" required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-3 second-item">
                                    <fieldset>
                                        <input name="location" type="text" class="form-control" id="location" placeholder="Type location..." required="">
                                    </fieldset>
                                </div>
                                <div class="col-md-3 third-item">
                                    <fieldset>
                                        <select required name='category' onchange='this.form.()'>
                                            <option value="">Select category...</option>
                                            <option value="Shops">Homes</option>
                                            <option value="Hotels">Apartments</option>
                                            <option value="Restaurants">Offices</option>
                                            <option value="Events">Buildings</option>
                                            <option value="Meetings">Shops</option>
                                            <option value="Fitness">Villa</option>
                                            <option value="Cafes">Townhouse</option>
                                        </select>
                                    </fieldset>
                                </div>
                                <div class="col-md-3">
                                    <fieldset>
                                        <button type="submit" id="form-submit" class="btn">Search Now</button>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </section>







    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" type="text/javascript"></script>
